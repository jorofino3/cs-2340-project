<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#121212">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="414dp"
            android:layout_height="235dp"
            android:background="#121212"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="HOW TO PLAY"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="12dp"
                android:text="Guess the WORDLE in six tries.  "
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="12dp"
                android:text="Each guess must be a valid five-letter word. Hit the enter button to submit.  "
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="After each guess, the color of the tiles will change to show how close your guess was to the word.  "
                android:textColor="#F4F4F4"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="410dp"
            android:layout_height="355dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="48dp"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:srcCompat="@drawable/worlde_rules" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#2196F3"
            android:onClick="onClick"
            android:text="Go Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>