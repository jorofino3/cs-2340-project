<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/betLinearLayout"
        android:layout_width="355dp"
        android:layout_height="367dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/rounded_borders"
        android:backgroundTint="@color/bg_primary"
        android:orientation="vertical"
        android:padding="10dp"
        android:radius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/betTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PLACE BETS"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/betPopUpAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bet Amount: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/betLinearLayoutChips"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/rounded_borders"
            android:backgroundTint="@color/bg_primary"
            android:padding="10dp"
            android:radius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/chip2"
                android:layout_width="80dp"
                android:layout_height="73dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/chip2" />

            <ImageView
                android:id="@+id/chip10"
                android:layout_width="80dp"
                android:layout_height="73dp"
                app:srcCompat="@drawable/chip10" />


            <ImageView
                android:id="@+id/chip25"
                android:layout_width="80dp"
                android:layout_height="73dp"
                app:srcCompat="@drawable/chip25" />

            <ImageView
                android:id="@+id/chip100"
                android:layout_width="80dp"
                android:layout_height="73dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/chip100" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBlackjackBet"
            android:layout_width="340dp"
            android:layout_height="215dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_back"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#032BF4"
                android:text="GO BACK"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="502dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#032BF4"
                android:text="CLEAR" />


            <Button
                android:id="@+id/place_bet"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#032BF4"
                android:text="PLACE BET"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="656dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>